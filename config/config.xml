<config>
    <!-- AUTHENTICATION-->
    <auth>       
        <!-- auth session length time in minutes  (0 = never and is default) -->
        <expire>0</expire>
        <!-- auth session allowed idle time before logout (0 = never and is default) -->
        <idle>0</idle>
    </auth>
    <session>
		<active>1</active>
        <!-- specifies the lifetime of the cookie in seconds which is sent to the browser. The value 0 means "until the browser is closed." Defaults to 0 -->
        <cookieLifetime>0</cookieLifetime>
        <!-- specifies cache control method to use for session pages[none][nocache][private][private_no_expire][public] -->
        <cacheLimiter>private</cacheLimiter>
        <!-- specifies time-to-live for cached session pages in minutes, this has no effect for nocache limiter. Defaults to 180. -->
        <cacheExpires>120000</cacheExpires>
    </session>
	
  <!-- FLOW -->
    <flow name="www">
        <globals>PG</globals>
        <request>PGFR</request>
    </flow>
    
    <flow name="dev">
        <globals>PGC</globals>   
        <request>PGFR</request>
    </flow>
	
	
	<modes>
		<dev/>
	</modes>
	
	<domain>
		<server_name mode="dev">&server_name;</server_name>
	</domain>
    <!-- PATH SETTINGS -->
    <path>
        <base>&includepath;nexista/</base>
        <!-- I would like to simplify these -->
        <builders>&includepath;nexista/modules/builders/</builders>
        <handlers>&includepath;nexista/modules/handlers/</handlers>
        <validators>&includepath;nexista/modules/validators/</validators>
        <actions>&includepath;nexista/modules/actions/</actions>
        
        
        <applications>&project_root;/apps/&app_name;/</applications>
        <compile>&project_root;/cache/&server_name;/&app_name;/</compile>
		<cache>&project_root;/cache/&server_name;/cache/</cache>
        
        <tmp>/tmp/php/</tmp>
        <logs>/usr/share/##PROJECT_NAME##/log/</logs>
		<home>/index.php</home>
		<default>/index.php</default>
    </path>

    <!-- BUILD SETTINGS -->
    <build>
        <loader>&project_root;/cache/&server_name;/&app_name;/&app_name;.php</loader>
        <sitemap>&project_root;/apps/&app_name;/config/sitemap.xml</sitemap>
        <prepend>&project_root;/lib/php/prepend.php</prepend>
        <!-- enter a gate name for missing when there is no match -->
        <missing></missing>
        <default></default>
        <query>nid</query>
        <!-- The rebuild key is used for manually rebuilding the project / server setup.-->
        <rebuild>nxbin</rebuild>
    </build>

	<!-- This should probably be instead determined by dev status. -->
    <runtime>
        <cache>0</cache>
        <!-- Sets $GLOBALS['debugTrack'] to true when on, anything else does not set it -->
        <debug>o</debug>
    </runtime>
</config>


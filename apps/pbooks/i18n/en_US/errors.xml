<i18n>
  <errors lang="en-us">
    <error>
      <key>error</key>
      <value>Error</value>
    </error>
    <error>
      <key>general_error</key>
      <value>An error has occurred, please try again.</value>
    </error>
    <!-- Account errors -->
    <error>
      <key>account_duplicate</key>
      <value>There already exists an account with that name or number, please try again.</value>
    </error>
    <error>
      <key>missing_account_name</key>
      <value>Please enter an account name.</value>
    </error>
    <error>
      <key>missing_account_number</key>
      <value>Please enter an account number.</value>
    </error>
    <error>
      <key>no_ar_account</key>
      <value>You have not specified an accurate accounts receivable account. You can do so by editing the account you wish to use for accounts
        receivable and clicking the Yes radio button where it says "Accounts Receivable Account".</value>
    </error>
    <error>
      <key>no_checking_account</key>
      <value>You have not specified any checking accounts.</value>
    </error>
    <error>
      <key>no_deposit_account</key>
      <value>You have not specified any deposit accounts.</value>
    </error>
    <error>
      <key>no_payable_account</key>
      <value>You have not specified any accounts payable accounts.</value>
    </error>
    <error>
      <key>no_purchasing_account</key>
      <value>You have not specified any purchasing accounts.</value>
    </error>
    <!-- Entry errors -->
    <error>
      <key>non_existent_entry_id</key>
      <value>There is no entry ID with that value, please try again.</value>
    </error>
  </errors>
</i18n>
<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="general_ledger_open_account">
	<connection>&pb_connection;</connection>
	<params>
		<param name="_post/entry_datetime" type="text"/>
		<param name="_post/entry_amount" type="text"/>
		<param name="_post/account_id" type="integer"/>
		<param name="//option_get_company_name/fiscal_period_id" type="integer"/>
	</params>
	<sql>
		INSERT INTO &pb_general_ledger;
		(entry_datetime, memorandum, entry_amount, account_id, entry_id, entry_amount_id, fiscal_period_id)
		VALUES
		(?, 'Opening transaction', ?, ?, -1, 0, ?)
	</sql>
</query>

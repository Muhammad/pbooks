<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="new_journal_entry">
	<connection>&pb_connection;</connection>
	<params>
		<param name="entry_datetime" type="text"/>
		<param name="temp_entry_datetime" type="text"/>
		<param name="//option_get_company_name/fiscal_period_id" type="integer"/>
	</params>
	<sql>
  INSERT INTO &pb_entries;
  (entry_datetime,memorandum,status,fiscal_period_id)
  VALUES
  (?,?,9,?)
  </sql>
</query>
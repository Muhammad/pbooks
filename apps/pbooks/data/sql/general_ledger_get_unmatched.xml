<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="get_all_transactions">
    <connection>pbooks</connection>
    <params>
		<param name="_get/account_id" type="text" default="%"/>
        <param name="from_date" type="text" />
        <param name="to_date" type="text" />
        <param name="sorting" type="text" default="ASC"/>
        <param name="sorting" type="text" default="ASC"/>
	</params>
    <sql>
        SELECT account_id,SUBSTR(memorandum,1,50) as memorandum,
        &pb_accounts;.name,entry_id,transaction_id,entry_amount,
        DATE(entry_datetime) as entry_datetime FROM &pb_general_ledger;,&pb_accounts;
        
        WHERE account_id LIKE ? 
        AND &pb_general_ledger;.account_id=&pb_accounts;.id 
        AND &pb_general_ledger;.entry_id=0 
        AND entry_amount!='0.00' 
        
		AND &pb_general_ledger;.entry_datetime &gt;= ?
        AND &pb_general_ledger;.entry_datetime &lt;= ?
        
        ORDER BY
        CASE ? WHEN 'ASC' THEN &pb_general_ledger;.entry_datetime END ASC, 
        CASE ? WHEN 'DESC' THEN &pb_general_ledger;.entry_datetime END DESC
    </sql>
</query>
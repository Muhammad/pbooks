<!DOCTYPE query SYSTEM "__default_table_names__.txt">
<query name="account_groups_get_accounts" loop="//account_sub_groups/groups/group" default="1">
    <connection>&pb_connection_read;</connection>
    <params>
        <param array="account_sub_groups/groups/group" type="integer"/>
	</params>
    <sql>
        SELECT &pb_accounts;.group_id, &pb_accounts;.name,  &pb_accounts;.id

        FROM &pb_accounts;

        WHERE
        &pb_accounts;.group_id=?
    </sql>
</query>